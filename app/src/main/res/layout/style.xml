<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <style name="Widget.Wordia.Button.Primary" parent="Widget.Material3.Button.Filled"
        tools:ignore="MissingConstraints,MissingPrefix">
        <item name="android:background">#E5E5E5</item>   <!-- 밝은 회색 -->
        <item name="android:textColor">#000000</item>
        <item name="iconTint">#000000</item>
        <item name="rippleColor">#33000000</item>
        <item name="shapeAppearance">@style/Shape.Wordia.Button</item>
    </style>

    <style name="Widget.Wordia.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton"
        tools:ignore="MissingConstraints,MissingPrefix">
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">#000000</item>
        <item name="iconTint">#000000</item>
        <item name="shapeAppearance">@style/Shape.Wordia.Button</item>
    </style>

</androidx.constraintlayout.widget.ConstraintLayout>